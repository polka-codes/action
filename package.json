{
  "name": "@polka-codes/action",
  "license": "Apache-2.0",
  "author": "github@polka.codes",
  "module": "src/main.ts",
  "type": "module",
  "version": "1.0.1",
  "description": "GitHub Action for Polka Codes integration",
  "scripts": {
    "build": "bun build ./src/main.ts --outfile dist/index.js --target node",
    "lint": "biome check .",
    "fix": "biome check --write",
    "check": "tsc --noEmit && biome check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "resolutions": {
    "@octokit/core": "5.2.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/core": "^5.2.0",
    "@polka-codes/github": "^0.7.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "22.13.1",
    "bun-types": "^1.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --write --no-errors-on-unmatched"]
  },
  "packageManager": "bun@1.2.0"
}
